  </ItemGroup>
  <ItemGroup>
    <ApplicationDefinition Include="..\XtRay.Windows\App.xaml" Link="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
    <!--<Compile Include="..\XtRay.Windows\App.xaml.cs" Link="App.xaml.cs" />-->
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\XtRay.Windows\MainWindow.xaml" Link="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\XtRay.Windows\AboutWindow.xaml" Link="AboutWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\XtRay.Windows\ParamsDialog.xaml" Link="ParamsDialog.xaml">
