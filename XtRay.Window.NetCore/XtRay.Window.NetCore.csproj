    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\XtRay.Windows\ReturnValueDialog.xaml" Link="ReturnValueDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\XtRay.Windows\TraceBox.xaml" Link="TraceBox.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
